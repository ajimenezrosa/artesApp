<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="co.dairoaguas.artesapp.FragmentCategory">

    <android.support.v7.widget.CardView
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:elevation="5dp"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/ivSombreros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/sombrero" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:elevation="5dp"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/ivBolsos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/bolso" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:elevation="5dp"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/ivAccesorios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/accesorios" />
    </android.support.v7.widget.CardView>


</LinearLayout>
